<%- include("./includes/header") %>
<section class="vh-100" style="background-color: #fffcfd;" id="loginbox">
	<div class="container py-5 h-100">
	  <div class="row d-flex justify-content-center align-items-center h-100">
		<div class="col col-xl-10">
		  <div class="card" style="border-radius: 1rem;">
			<div class="row g-0">
			  <div class="col-md-6 col-lg-5 d-none d-md-block">
				<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
				  alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
			  </div>
			  <div class="col-md-6 col-lg-7 d-flex align-items-center">
				<div class="card-body p-4 p-lg-5 text-black">
  
				
  
					<div class="d-flex align-items-center mb-3 pb-1">
					  <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
					  <span class="h1 fw-bold mb-0">Genqmobz</span>
					</div>
  
					<h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">OTP VERIFICATION</h5>

					<form id="login-form" action="/verify-otp" method="post">
						<div class="form-outline mb-4">
							<input type="text" name="name" id="emailInput" value="<%= name %>" class="form-control form-control-lg"  required/>
						
						</div>
					
						<div class="form-outline mb-4">
							<input type="text" name="number" id="passwordInput"value="<%= number %>" class="form-control form-control-lg" required/>
							
						</div>



            <div class="form-outline mb-4">
							<input type="text" name="otp" id="passwordInput" class="form-control form-control-lg" placeholder="Enter your OTP" required/>
							
						</div>
						
						<div class="pt-1 mb-4">
							<button class="btn btn-dark btn-lg btn-block"  type="submit">Submit Go back Login</button>
						</div>
						<div class="pt-1 mb-4">
							<button id="resend-otp" class="btn btn-dark btn-lg btn-block" type="button" disabled>Resend OTP</button>
						  </div>

						  
					</form>
  
					
					<a href="#!" class="small text-muted">Terms of use.</a>
					<a href="#!" class="small text-muted">Privacy policy</a>
				  
  
				</div>
			  </div>


			</div>
		  </div>
		</div>
	  </div>
	</div>
  </section>

  <script>
	// JavaScript to handle the countdown timer and resend OTP functionality
	document.addEventListener("DOMContentLoaded", function () {
	  let countdown = 15; // Set the initial countdown time in seconds
	  const resendButton = document.getElementById("resend-otp");
  
	  // Function to update the countdown display
	  function updateCountdown() {
		if (countdown > 0) {
		  resendButton.textContent = `${countdown}s`; // Show the countdown time
		  countdown--;
		  setTimeout(updateCountdown, 2500); // Update every second
		} else {
		  resendButton.textContent = "Resend OTP"; // Show "Resend OTP" when the countdown reaches zero
		  resendButton.removeAttribute("disabled"); // Enable the button
		}
	  }
  
	  // Start the countdown immediately when the page loads
	  updateCountdown();
  
	  // Event listener for the "Resend OTP" button
	  resendButton.addEventListener("click", function () {
		// Reload the page when the button is clicked
		window.location.reload();
	  });
	});
  </script>
<%- include("./includes/footer") %>