<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Genqmobz</title>
  <link rel="shortcut icon" type="image/png" href="/assets/images/logos/favicon.png" />
  <link rel="stylesheet" href="/assets/css/styles.min.css" />
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <div
      class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
      <div class="d-flex align-items-center justify-content-center w-100">
        <div class="row justify-content-center w-100">
          <div class="col-md-8 col-lg-6 col-xxl-3">
            <div class="card mb-0">
              <div class="card-body">
                <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                 <h1>Genqmobz</h1>
                </a>
                <p class="text-center">Your Social Campaigns</p>
                <form action="/admin/adminlogin" method="post">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Username</label>
                    <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"  required onkeyup="validateInput(this.value)" >
                  </div>
                  <div class="mb-4">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword1" required  onkeyup="validateInput(this.value)">
                  </div>
                 
                 
                  <button type="submit" id="submitbutton" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Login</button>
                </form>
                <% if (typeof message !== "undefined") { %>
                  <p style="color: rgb(228, 21, 21)"><%= message %></p>
                <% } %>
                <error id="errorlog" style="color: rgb(233, 23, 23);"></error>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script type="text/javascript">
    var pattern = /\s/g;
    var alertmsg = document.getElementById("errorlog"); // Use the correct id
    var submitButton = document.getElementById("submitbutton");

    function validateInput(data) {
        var isSpace = pattern.test(data);
        var isNegativeNumber = parseFloat(data) < 0; // Convert input to float and check if negative

        if (isSpace || isNegativeNumber) {
            alertmsg.innerHTML = "Invalid input";
            submitButton.style.display = "none"; // Hide the submit button
        } else {
            alertmsg.innerHTML = "";
            submitButton.style.display = "block"; // Show the submit button
        }
    }
</script>
</body>

</html>







