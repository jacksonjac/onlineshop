<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Genqmobz</title>
  <link rel="shortcut icon" type="image/png" href="/assets/images/logos/favicon.png" />
  <link rel="stylesheet" href="/assets/css/styles.min.css" />
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <div
      class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
      <div class="d-flex align-items-center justify-content-center w-100">
        <div class="row justify-content-center w-100">
          <div class="col-md-8 col-lg-6 col-xxl-3">
            <div class="card mb-0">
              <div class="card-body">
                <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                 <h1>Genqmobz</h1>
                </a>
                <p class="text-center">Your Social Campaigns</p>
                <form action="/admin/adminlogin" method="post"  onsubmit="return validateform()">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Username</label>
                    <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" >
                  </div>
                  <div class="mb-4">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword1" >
                  </div>
                 
                 
                  <button type="submit" id="submitbutton" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Login</button>
                </form>
                <% if (typeof message !== "undefined") { %>
                  <p style="color: rgb(228, 21, 21)"><%= message %></p>
                <% } %>
                <error id="errorlog" style="color: rgb(233, 23, 23);"></error>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  


  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
	function validateform() {
	  var email = document.getElementById("exampleInputEmail1").value;
	  var password = document.getElementById("exampleInputPassword1").value;
	  var error = document.getElementById("error-message");
	  
	  var alphanumericRegex = /^[a-zA-Z0-9]*$/;
	  
	  if (email == null || email.trim() === "") {  
    
		Swal.fire({
  icon: 'error',
  title: 'Oops...',
  text: 'What you Think !!, Please type valid Email',
  
})

		
		return false;  
	  } else if (password.trim() === "") {  
		Swal.fire({
  icon: 'error',
  title: 'Oops...',
  text: 'What you Think !!, Please type valid Password',
  
})
		return false;  
	  } else if (password.length < 6) {
		Swal.fire({
  icon: 'error',
  title: 'Oops...',
  text: 'Password Should be Minimum 8 Digit',
  
})
		return false;
	  } else if (!alphanumericRegex.test(password)) {

		Swal.fire({
  icon: 'error',
  title: 'Oops...',
  text: 'Password must be alphanumeric only',
  
})
		
		return false;
	  }
	  
	  error.innerHTML = ""; // Clear error message if all checks pass
	  return true; // Form submission will proceed
	}
	</script>
</body>

</html>







